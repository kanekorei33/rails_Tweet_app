<h1>ブログ一覧</h1>

<p><%= notice %></P>
  <table>
    <tr>
    <th>内容</th>
    </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '詳細', post_path(post.id) %></td>
    <td><%= link_to '編集', edit_post_path(post.id)%></td>
  </tr>
<%end%>
</table>
